<% if !@picture.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="well">
  <%= form_for @picture, html: { multipart: true } do |f| %>
    <%= f.label :img %>
    <%= f.file_field :img %>
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>
