<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<%= link_to "New Picture", new_picture_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Download Link</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= image_tag picture.img_url, width: 200 %></td>
        <td><%= button_to "Delete", picture, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete this picture?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
